<main class="wrapper">
  <div class="row">
    <div class="columns large-3">
      <div class="m-bottom">
        <%= link_to :back do %>
          <%= icon "chevron-left", class: "icon--small" %>
          <%= t("back", scope: "decidim.amendments.review") %>
        <% end %>
      </div>
      <div class="section">
        <p>
          <%= t("help_text", scope: "decidim.amendments.review", model_name: emendation.amendable.model_name.human.downcase) %>

          <strong>
            <%= emendation.amendable.title %>
          </strong>
        </p>
      </div>
    </div>
    <div class="columns large-6">
      <h2 class="section-heading">
        <%= t("heading", scope: "decidim.amendments.review") %>
      </h2>

      <div class="card">
        <div class="card__content">
          <%= decidim_form_for(@form, url: accept_amend_path(emendation.amendment), method: :patch) do |form| %>
            <%= render partial: "edit_form_fields",
            locals: { form: form, original: :emendation } %>

            <div class="actions">
              <%= form.submit t("send", scope: "decidim.amendments.review"),
              class: "button expanded mt-s mb-none", data: { disable: true } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="columns large-3"></div>
  </div>
</main>
