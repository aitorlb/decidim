<div class="row attachments">
  <div class="columns large-12">
    <% if document.present? %>
      <div class="card--list__item">
        <div class="card--list__text">
          <div>
            <a href="<%= document.url %>" class="card__link">
              <h6 class="card--list__heading heading6">
                <%= attachment_title(document) %> <small>
                  <%= document.file_type %>
                  <%= number_to_human_size(document.file_size) %></small>
              </h6>
            </a>
          </div>
        </div>
        <div class="card--list__data">
          <%= link_to document.url, target: "_blank", class: "card--list__data__icon" do %>
          <%= icon "cloud-download" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row attachments">
  <div class="columns large-12">
    <% if photo.present? %>
      <div class="section images">
        <h4 class="section-heading">
          <%= t("related_photos", scope: "decidim.application.photos") %>
        </h4>
        <div class="gallery row">
          <div class="columns small-6 medium-4 end">
            <%= link_to photo.big_url, target: "_blank" do %>
            <%= image_tag photo.thumbnail_url, class:"thumbnail", alt: strip_tags(translated_attribute(photo.description)) %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
